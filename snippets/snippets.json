{
	"beg": {
		"prefix": "beg",
		"body": "\nbegin\n\n\t${1:; begin your script}\n\nend\n",
		"description": "Begin NCL script block",
		"scope": "source.ncl"
	},
	"do": {
		"prefix": "do",
		"body": "\ndo ${1:i} = ${2:0}, ${3:n}\n\t${4:; write loop content}\nend do\n",
		"description": "NCL do loop",
		"scope": "source.ncl"
	},
	"if": {
		"prefix": "if",
		"body": "\nif (${1:conditions}) then\n\t${2:; write branch}\nend if\n",
		"description": "NCL if condition",
		"scope": "source.ncl"
	},
	"ifelse": {
		"prefix": "ifelse",
		"body": "\nif (${1:conditions}) then\n\t${2:; write branch}\nelse\n\t${3:; write else branch}\nend if\n",
		"description": "NCL if-else condition",
		"scope": "source.ncl"
	},
	"load": {
		"prefix": "load",
		"body": "\nload \"\\$NCARG_ROOT/lib/ncarg/nclscripts/csm/gsn_code.ncl\"\nload \"\\$NCARG_ROOT/lib/ncarg/nclscripts/csm/gsn_csm.ncl\"\nload \"\\$NCARG_ROOT/lib/ncarg/nclscripts/csm/contributed.ncl\"\n",
		"description": "Load NCL library scripts",
		"scope": "source.ncl"
	},
	"res_axis_ranges": {
		"prefix": "res_axis_ranges",
		"body": "\n${1:res}@trXMinF = ${2:0}\n${1}@trXMaxF = ${3:1}\n${1}@trYMinF = ${4:0}\n${1}@trYMaxF = ${5:1}\n${1}@tmXBTickStartF = ${2}\n${1}@tmXBTickEndF = ${3}\n${1}@tmYLTickStartF = ${4}\n${1}@tmYLTickEndF = ${5}\n",
		"description": "NCL resources xy ranges",
		"scope": "source.ncl"
	},
	"res_axis_reverse": {
		"prefix": "res_axis_reverse",
		"body": "\n${1:res}@tr${2:X or Y}Reverse = True\n",
		"description": "NCL resource to reverse axis",
		"scope": "source.ncl"
	},
	"res_contour_explicit_levels": {
		"prefix": "res_contour_explicit_levels",
		"body": "\n${1:res}@cnLevelSelectionMode = \"ExplicitLevels\"\n${1}@cnLevels = (/${2:...}/)\n",
		"description": "NCL resources explicit contour levels",
		"scope": "source.ncl"
	},
	"res_contour_manual_levels": {
		"prefix": "res_contour_manual_levels",
		"body": "\n${1:res}@cnLevelSelectionMode = \"ManualLevels\"\n${1}@cnMinLevelValF = ${2:min_level}\n${1}@cnMaxLevelValF = ${3:max_level}\n${1}@cnLevelSpacingF = ${4:level_spacing}\n",
		"description": "NCL resources manual contour levels",
		"scope": "source.ncl"
	},
	"res_xy_grid_lines": {
		"prefix": "res_xy_grid_lines",
		"body": "\n${1:res}@tmXMajorGrid = ${2:True}\n${1}@tmYMajorGrid = ${3:True}\n${1}@tmXMajorGridThicknessF = ${4:1.0}\n${1}@tmYMajorGridThicknessF = ${5:1.0}\n${1}@tmXMajorGridLineDashPattern = ${6:2}\n${1}@tmYMajorGridLineDashPattern = ${6}\n",
		"description": "NCL resources xy grid lines",
		"scope": "source.ncl"
	},
	"res_xy_log_scale": {
		"prefix": "res_xy_log_scale",
		"body": "\n${1:res}@xy${2:X or Y}Style = \"Log\"\n",
		"description": "NCL resource to draw XY in log scale",
		"scope": "source.ncl"
	}
}